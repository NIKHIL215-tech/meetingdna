generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Organization {
  id        Int        @id @default(autoincrement())
  name      String
  slug      String     @unique
  auditLogs AuditLog[]
  meetings  Meeting[]
  orgPulses OrgPulse[]
  repos     Repo[]
  teams     Team[]
  users     User[]
}

model Team {
  id    Int          @id @default(autoincrement())
  name  String
  orgId Int
  org   Organization @relation(fields: [orgId], references: [id])
  users User[]
}

model User {
  id               Int          @id @default(autoincrement())
  name             String
  email            String       @unique
  orgId            Int
  teamId           Int?
  privacyEnabled   Boolean      @default(false)
  dataSharingLevel String       @default("FULL")
  optOutReason     String?
  commits          Commit[]
  team             Team?        @relation(fields: [teamId], references: [id])
  org              Organization @relation(fields: [orgId], references: [id])
  userStats        UserStats?
  meetings         Meeting[]    @relation("MeetingAttendees")
}

model Repo {
  id        Int          @id @default(autoincrement())
  name      String
  githubUrl String?
  orgId     Int
  commits   Commit[]
  org       Organization @relation(fields: [orgId], references: [id])
}

model Meeting {
  id        Int          @id @default(autoincrement())
  title     String
  startTime DateTime
  endTime   DateTime
  seriesKey String
  orgId     Int
  org       Organization @relation(fields: [orgId], references: [id])
  attendees User[]       @relation("MeetingAttendees")
}

model Commit {
  id        Int      @id @default(autoincrement())
  sha       String   @unique
  authorId  Int?
  timestamp DateTime
  repoId    Int?
  repo      Repo?    @relation(fields: [repoId], references: [id])
  author    User?    @relation(fields: [authorId], references: [id])
}

model MeetingSeriesStats {
  seriesKey             String  @id
  avgPostMeetingCommits Float
  baselineCommits       Float
  valueScore            Int
  numOccurrences        Int
  statusLabel           String?
  explanation           String?
  recommendation        String?
}

model UserStats {
  userId             Int     @id @default(autoincrement())
  meetingHoursPerDay String
  commitsByHour      String
  burnoutFlag        Boolean
  summaryBullets     String?
  user               User    @relation(fields: [userId], references: [id])
}

model AuditLog {
  id        Int          @id @default(autoincrement())
  timestamp DateTime     @default(now())
  orgId     Int
  userId    Int?
  action    String
  resource  String
  details   String?
  ipAddress String?
  org       Organization @relation(fields: [orgId], references: [id])
}

model OrgPulse {
  id                Int          @id @default(autoincrement())
  orgId             Int
  timestamp         DateTime     @default(now())
  activeSeriesCount Int
  teamVelocity      Int
  focusScore        Int
  burnoutRisk       Int
  signalsDetected   Int
  summarySnippet    String?
  org               Organization @relation(fields: [orgId], references: [id])
}
